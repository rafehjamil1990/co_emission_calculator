<div class="container text-center mx-auto bg-body-secondary mt-5 py-5 rounded-3">
  <h1 class="text-body-emphasis">Welcome to Global Changer</h1>
  
  <div class="d-flex flex-column gap-2 col-6 mx-auto mt-5 text-start">
    <div class="d-inline-flex justify-content-between align-items-center", data-controller="upload">
      <%= form_with model: @import, class: 'w-50', data: { upload_target: 'form' } do |form| %>
        <%= form.hidden_field :import_class, value: 'EmissionFactors' %>
        <%= form.label :excel, 'Emission Factors File' %>
        <%= form.file_field :excel, multiple: false, direct_upload: true, direct_upload: true, data: { upload_target: 'input', action: 'change->upload#uploadFile' }, class: 'form-control' %>
      <% end %>
      <span><i data-upload-target="progressIcon" class="bi bi-x-circle text-danger"></i></span>
    </div>
    <div class="d-inline-flex justify-content-between align-items-center", data-controller="upload">
      <%= form_with model: @import, class: 'w-50', data: { upload_target: 'form' } do |form| %>
        <%= form.hidden_field :import_class, value: 'EmissionDataImports' %>
        <%= form.label :excel, 'Emission Data File' %>
        <%= form.file_field :excel, multiple: false, direct_upload: true, data: { upload_target: 'input', action: 'change->upload#uploadFile' }, class: 'form-control' %>
      <% end %>
      <span><i data-upload-target="progressIcon" class="bi bi-x-circle text-danger"></i></span>
    </div>
    <div class="d-inline-flex justify-content-between align-items-center mt-3">
      <%= link_to 'View Emission Data', emission_data_imports_path, class: 'btn btn-info w-50', type: 'button' %>
      <span><i class="bi bi-check-circle text-success"></i></span>
    </div>
  </div>
</div>

<div class="container text-center mx-auto bg-body-secondary mt-5 py-5 rounded-3">
  <h1>Emission Factors</h1>

  <div class="container mt-4">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Quantity</th>
          <th scope="col">Unit</th>
        </tr>
      </thead>
      <tbody>
        <%= render @emission_factors %>
      </tbody>
    </table>
  </div>
</div>

